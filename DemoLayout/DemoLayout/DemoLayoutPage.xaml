    xmlns:local="clr-namespace:DemoLayout"
    x:Class="DemoLayout.DemoLayoutPage"
    Padding="0,20,0,0">

    <ContentPage.Content>
        <StackLayout Orientation="Horizontal"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <StackLayout>
                <Image Source="http://placehold.it/100/100"/>
                <Label Text="Welcome to Xmarin Forms!"/>
            </StackLayout>
            
            <Label Text="Label 1"
